{
    "name": "eToro Helper for Firefox",
    "short_name": "eToro Helper for Firefox",
    "description": "Showing spread prices and percentages for a better decision. See source code https://github.com/vanduc1102/etoro-helper . Donate https://vanduc1102.github.io/donate/",
    "version": "1.0.0",
    "background": {
        "scripts": [ "background.js" ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "https://*.etoro.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.etoro.com/*"],
        "css":["styles/main.css"],
        "js": ["scripts/main.js"]
      }
    ],
    "browser_action": {
        "default_title": "eToro Helper",
        "default_icon": "assets/etoro-64x64.png"
    },
    "icons": {
        "16": "assets/etoro-64x64.png",
        "48": "assets/etoro-64x64.png",
        "128": "assets/etoro-128x128.png"
    },
    "manifest_version": 2
}
